    <Button
        android:id="@+id/profile"
        android:layout_width="250dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/oval"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:text="submit" />

</LinearLayout>